<script>
    $(document).ready(function() {
        $('.offices-select2').select2({
            ajax: {
                delay: 1,
                datatype: 'json',
                url: '/selectOffices',
                data: function (params) {
                    var queryParameters = {
                        q: params.term
                    }
                    return queryParameters;
                },
                processResults: function (data) {
                    return {results: data};
                },
                cache: true
            },
            minimumInputLength: 3,
            placeholder: '{{ 'search_for_an_office'|trans }}'
        });
