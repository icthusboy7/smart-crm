                    }
                    return queryParameters;
                },
                processResults: function (data) {

                    return {results: data};
                },
                cache: true
            },
            minimumInputLength: 3,
            placeholder: '{{ "Search for Provider"|trans }}',
        });
        $('.contactNIF').select2({
            ajax: {
                delay: 1,
                datatype: 'json',
