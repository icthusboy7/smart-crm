<div id="filters-container">

  <!-- Filters heading -->

  <div id="filters-header">
    <button aria-expanded="true"
            aria-controls="filters-body"
            data-target="#filters-body"
            data-toggle="collapse"
            class="accordion accordion-blue">
      {{ "Task filters" | trans }}
    </button>
  </div>

  <!-- Filters form -->

  <div id="filters-body"
       aria-labelledby="filters-header"
       data-parent="#filters-container"
       class="collapse">
    <form id="filters-form" name="filters-form" action="{{ path('tasks') }}" method="get" autocomplete="off">
      <div class="card">
        <div class="container p-10">
          <div class="row">
            <div class="col-md pb-10">
              {% include('widgets/_global_task_filters.html.twig') %}
            </div>
          </div>
          <div class="row">
            <div class="col-md pb-10">
              {% include('widgets/_authors_picker.html.twig') %}
            </div>
            <div class="col-md pb-10">
              {% include('widgets/_task_type_filter.html.twig') %}
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12 text-center">
              <a role="button" id="find_task" href="#" class="btn btn-blue btn-sm">
                <i class="fas fa-search fa-fw"></i> {{ 'global.button.find'|trans }}
              </a>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>

</div>
