{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/twigs_custom_css/tasks.css') }}"/>
    {{ parent() }}
{% endblock %}
{% block body %}
    <div id="wrapper">
        {{ render(controller(
            'App\\Controller\\HomeController::layoutContructor', { 'padre': 'AreaComercial', 'route': app.request.get('_route'), 'params': app.request.attributes.get('_route_params')}
        )) }}
        <div id="page-wrapper">
            <div class="container-fluid">
                {{ render(controller('App\\Controller\\HomeController::getBreadcrumb', { 'route': app.request.get('_route') })) }}
            </div>
            <div class="container">
                <section class="services bg-container" id="services">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="panel panel-primary">
                                    <h1>TaskTypes</h1>
                                    <div class="row mt-10">
                                        <div class="col-lg-12">
                                            <div class="card card-body p-10">
                                                {{ form_start(form) }}
                                                {{ form_widget(form.description) }}
                                                {{ form_widget(form.icon) }}
                                                {{ form_widget(form.color) }}
                                                <div class="custom-control custom-checkbox">
                                                    {{ form_widget(form.isSpecial) }}
                                                    {{ form_label(form.isSpecial) }}
                                                </div>
                                                <button id="preview_button" type="button" class="btn btn-sm btn-outline-dark">{{ 'Preview form'|trans }}</button>
                                                {{ form_widget(form.save) }}
                                                {{ form_end(form) }}
                                                <div id="formEditor"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    {% include 'area-comercial/modals/tasktype_preview_modal.html.twig' %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/polyfill.min.js') }}"></script>
    <script src="{{ asset('assets/js/form-builder.min.js') }}"></script>
    <script src="{{ asset('assets/js/form-render.min.js') }}"></script>
    <script src="{{ asset('assets/js/jscolor.js') }}"></script>
    {% include 'area-comercial/scripts/tasktype_form_js.html.twig' %}
{% endblock %}
