<div class="modal fade" id="responseSpecialTask" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="formSpecialTask" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">{{ 'petitions'|trans }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div id="error-message" class="text-danger"></div>
                    <div id="specialTaskForm"></div>
                </div>
                <div class="modal-footer text-center">
                    <button type="submit" id="sumbitSpecial" class="btn btn-blue bt-submit"><i class="fas fa-paper-plane fa-fw"></i> {{'send'|trans}}</button>
                </div>
            </form>
        </div>
    </div>
</div>
