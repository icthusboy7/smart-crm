<div class="modal fade" id="edit_responsible" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="edit_responsible_form">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">{{ "task.modal.responsible.title"|trans }}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" id="task_id" name="task_id" />
                        <label for="responsible_modal">{{ "task.modal.input.responsible"|trans }}</label>
                        <select id="responsible_modal" name="responsible_modal" class="form-control responsible_select" ></select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="save_responsible" class="btn btn-sm btn-primary">
                        <i class="fa fa-save fa-fw"></i> {{ "task.modal.button.save"|trans }}
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
