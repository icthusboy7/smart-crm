<div class="modal fade" id="contact_editing" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ "Edit contact"|trans }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="set_contact">
                    <input type="hidden" id="contact_id" name="contact_id">
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <div class="form-group">
                                <label for="contact_nif">{{ "NIF"|trans }}</label>
                                <input type="text" class="form-control" id="contact_nif" name="contact_nif">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12">
                            <div class="form-group">
                                <label for="contact_nombre">{{ "Name"|trans }}</label>
                                <input type="text" class="form-control" id="contact_nombre" name="contact_nombre">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <label for="contact_telefono">{{ "Phone_number"|trans }}</label>
                            <input type="text" class="form-control" id="contact_telefono" name="contact_telefono">
                        </div>
                        <div class="col-lg-6 col-md-12">
                            <label for="contact_email">{{ "Email"|trans }}</label>
                            <input type="text" class="form-control" id="contact_email" name="contact_email">
                        </div>
                        <div class="col-lg-12">
                            <label for="contact_direccion">{{ "Direction"|trans }}</label>
                            <input type="text" class="form-control" id="contact_direccion" name="contact_direccion">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <label class="filter-col" for="offices" style="margin-right:0;">{{ "select_office"|trans }}:</label>
                            <select id="select_offices_edit" name="contact_offices[]" multiple class="js-example-basic-single offices-select2">
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <label for="contact_observaciones">{{ "Observations"|trans }}</label>
                            <textarea type="text" class="form-control" id="contact_observaciones" name="contact_observaciones"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="save_contact" type="button" class="btn btn-blue btn-sm"><i class="fa fa-save"></i> {{ "Save"|trans }}</button>
                <button type="button" class="btn btn-sm" data-dismiss="modal"><i class="fa fa-minus-circle"></i> {{ "Close"|trans }}</button>
            </div>
        </div>
    </div>
</div>
