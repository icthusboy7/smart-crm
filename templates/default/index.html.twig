{% extends 'base.html.twig' %}

{% block body %}
	<div id="wrapper">
		<!-- Navigation -->
        {{ render(controller(
            'App\\Controller\\HomeController::layoutContructor', {'route': app.request.get('_route'), 'params': app.request.attributes.get('_route_params')}
        )) }}

		<div id="page-wrapper">
			{% include('default/container.html.twig') with widgets %}
		</div>
		<!-- /#page-wrapper -->
	</div>
	<!-- /#wrapper -->
{% endblock %}

{% block javascripts %}
	{{ parent() }}

	<script>
		{# ################################# #}
		{# Hover panel-body and panel-footer #}
		{# ################################# #}
		$(".hoverPanelBody, .hoverPanelFooter").hover(function(){
			$(this).find(".panel-body, .panel-footer").stop().animate({
				"height": "toggle",
				"opacity": "toggle",
				"padding": "toggle"
			}, 300);
		}, function(){
			$(this).find(".panel-body, .panel-footer").stop().animate({
				"height": "toggle",
				"opacity": "toggle",
				"padding": "toggle"
			}, 300);
		});
	</script>
{% endblock %}
